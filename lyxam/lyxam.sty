\newenvironment{preamble}[1][]{%%
% Basic style additional formatting of the text.
    \begin{@preamble@style}%%
% Optional parameters
    \useKVdefault[lyxam@preamble@keys]%%
    \setKV[lyxam@preamble@keys]{#1}%%
% Width
