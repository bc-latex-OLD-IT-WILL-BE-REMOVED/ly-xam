% Long version for points
\newcommand\@lyxam@ctxt@longpoints[1]{%%
    \@if@empty{#1}{}{%%
        \IfStrEq{#1}{0}{\@lyxam@ctxt@name{nopoint}}{%%
            #1 \IfStrEq{#1}{1}{\@lyxam@ctxt@name{point}}{\@lyxam@ctxt@name{points}}%%
        }%%
    }%%
}

% Long version of sources
