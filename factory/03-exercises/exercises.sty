% Long version for points
\newcommand\@lyxam@ctxt@longpoints[1]{%%
    \@if@empty{#1}{}{%%
        \IfStrEq{#1}{0}{\lyxam@text@nopoint{}}{%%
            #1 \IfStrEq{#1}{1}{\lyxam@text@point{}}{\lyxam@text@points{}}%%
        }%%
    }%%
}

