\newcommand\@lyxam@ctxt@longsource[1]{%%
    \@if@empty{#1}{}{\@lyxam@ctxt@name{source}: #1}%%
}

% Long version of time
%     #1: \lyxam@<CONTEXT>@time (user initial source)
\newcommand\@lyxam@ctxt@longtime[1]{%%
